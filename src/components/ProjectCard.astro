---
// Definimos las "props" que esta tarjeta espera recibir
export interface Props {
  title: string;
  description: string;
  imgSrc: string;
  tags: string[];
  demoUrl?: string; // El '?' hace que la prop sea opcional
  repoUrl?: string;
}

const { title, description, imgSrc, tags, demoUrl, repoUrl } = Astro.props;
---

<article class="project-card">
  <img src={imgSrc} alt={`Captura de pantalla del proyecto ${title}`} loading="lazy" />
  
  <div class="content">
    <h3>{title}</h3>
    <p>{description}</p>
    
    <ul class="tags">
      {tags.map(tag => <li>{tag}</li>)}
    </ul>
    
    <div class="links">
      {demoUrl && <a href={demoUrl} target="_blank" rel="noopener noreferrer">Ver Demo</a>}
      {repoUrl && <a href={repoUrl} target="_blank" rel="noopener noreferrer">Ver Código</a>}
    </div>
  </div>
</article>

<style>
  .project-card {
    background-color: #ffffff0d; /* Fondo semi-transparente (glassmorphism) */
    border: 1px solid var(--color-secondary);
    border-radius: 12px;
    overflow: hidden; /* Para que la imagen no se salga de los bordes redondeados */
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    display: flex;
    flex-direction: column;
  }

  .project-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 30px #0000004d;
  }

  img {
    width: 100%;
    aspect-ratio: 16 / 9; /* Proporción panorámica para las imágenes */
    object-fit: cover; /* Asegura que la imagen cubra el espacio sin deformarse */
  }

  .content {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    flex-grow: 1; /* Hace que el contenido ocupe el espacio restante */
  }

  h3 {
    font-size: 1.5rem;
    color: #f0f6fc;
    margin-bottom: 0.5rem;
  }

  p {
    font-size: 1rem;
    color: var(--color-text);
    line-height: 1.6;
    flex-grow: 1; /* Empuja los tags y links hacia abajo */
    margin-bottom: 1.5rem;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    list-style-type: none;
    padding: 0;
    margin: 0 0 1.5rem 0;
  }

  .tags li {
    font-size: 0.75rem;
    background-color: var(--color-primary);
    color: #fff;
    padding: 0.25rem 0.75rem;
    border-radius: 999px; /* Píldoras */
    font-weight: 500;
  }

  .links {
    display: flex;
    gap: 1rem;
  }

  .links a {
    font-family: var(--font-display);
    color: #fff;
    background-color: var(--color-secondary);
    padding: 0.5rem 1.25rem;
    border-radius: 6px;
    text-decoration: none;
    transition: background-color 0.3s ease;
    text-align: center;
  }

  .links a:hover {
    background-color: var(--color-primary);
  }
</style>